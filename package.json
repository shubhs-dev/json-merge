{
  "name": "@atshubh/json-merge",
  "version": "3.0.2",
  "description": "Library to merge multiple json files into single json file",
  "main": "src/index.js",
  "private": false,
  "bin": {
    "json-merge": "src/cli.js"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --ci",
    "json-merge": "node src/cli.js",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atshubh/json-merge.git"
  },
  "keywords": [
    "json",
    "merge",
    "json-merge",
    "combine",
    "json-combine"
  ],
  "author": "Shubhanshu Aggarwal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atshubh/json-merge/issues"
  },
  "homepage": "https://github.com/atshubh/json-merge#readme",
  "dependencies": {
    "glob": "^7.1.7",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "codecov": "^3.8.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "^28.0.2",
    "lint-staged": "^11.0.0",
    "prettier": "2.3.0",
    "semantic-release": "^17.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
